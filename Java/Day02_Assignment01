package com.employee;

public class Employee
{
    public static void main(String[] args)
    {
        System.out.println("-----> Java Essentials Batch 1 Day 2 Assignments <-----");
        System.out.println("Result ----");
        // Making a object of Employee class
        Employee emp1 = new Employee();
        Employee emp2 = new Employee();

        // Setting variables for emp1 object
        emp1.name = "Shubham prakash";
        emp1.age = 17;
        emp1.city = "Andhara Pradesh";
        
        // Setting variables for emp2 object
        emp2.name = "Saourab Gupta";
        emp2.age = 27;
        emp2.city = "mumbai";

        // Running the function
        emp1.display();
        emp2.display();

    }
}

package com.employee;

public class Employee {
    String name = new String();
    int age;
    String city = new String();

    public void display() {
        System.out.println("\nName of the Employee: " + name);
        System.out.println("Age of the Employee: " + age);
        System.out.println("City where Employee live: " + city);
    }
}
